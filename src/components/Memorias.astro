---
interface Props {
    name: string,
    texto: string,
    servicio:string
  

}
const { name, texto,servicio   } = Astro.props 
---
<div class="opinion-card">

  <p class=" text-gray-500 text-base leading-relaxed">{servicio}</p>
    <h3 class="text-gray-900 pb-2 text-xl font-bold sm:text-2xl">{name}</h3>
    <span class="bg-primaryDark mx-auto mb-6 inline-block h-1 w-[90px] rounded"></span>
    <p class="sm:text-xl text-gray-500 mb-10 text-base leading-relaxed">{texto}</p>
  </div>

  <style>
    .opinion-card {
      flex: 0 0 auto;
      width: 300px; /* Ancho de cada tarjeta de opinión */
      margin-right: 20px; /* Espacio entre las tarjetas */
      border: 1px solid #ddd; /* Borde de la tarjeta */
      border-radius: 10px; /* Radio del borde de la tarjeta */
      padding: 20px; /* Ajusta el relleno de la tarjeta según sea necesario */
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
      white-space: normal; /* Asegura que el texto no se corte y se muestre en varias líneas */
    }
  </style>